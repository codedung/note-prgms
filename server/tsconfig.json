{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "dist",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"]
    }
  },
  "include": ["app/**/*"],
  "exclude": ["node_modules", "app/**/*.test.ts", "app/**/__mocks__/*.ts"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
